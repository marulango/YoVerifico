<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    //Cuando el botón es presionado
    <item
        android:state_pressed="true"
        android:drawable="@drawable/button_evidence_pressed"/>

    //Primer item representa la configuración cuando el botón está inhabilitada
    <item
        android:state_enabled="false"
        android:drawable="@drawable/button_evidence_disabled"/>

    //cuando el botón está habilitado
    <item
        android:state_enabled="true"
        android:drawable="@drawable/button_evidence_enabled"/>



</selector>