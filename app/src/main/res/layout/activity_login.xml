<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catedral"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_left_login"
    android:paddingRight="@dimen/margin_left_login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:gravity="center"
        android:orientation="vertical">




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:src="@drawable/pazz"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_c"
            android:orientation="vertical"
            android:padding="10dp">


            <EditText
                android:id="@+id/edit_txt_email"
                style="@style/Widget.EditText.Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/user_mail"
                android:inputType="textEmailAddress"
                android:padding="10dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/disable_black_two" />


            <EditText
                android:id="@+id/edit_txt_password"
                style="@style/Widget.EditText.Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/user_password"
                android:inputType="textPassword"
                android:padding="10dp" />


        </LinearLayout>


        <Button
            android:id="@+id/btn_login"
            style="@style/Widget.Button.Standar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:text="@string/button_session" />


        <Button
            android:id="@+id/btn_continue_photo"
            style="@style/Widget.Button.Standar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:text="@string/button_register" />

        <View
            android:id="@+id/statusBarBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
